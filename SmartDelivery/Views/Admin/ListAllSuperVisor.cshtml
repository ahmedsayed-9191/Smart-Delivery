@model IEnumerable<SmartDelivery.Models.Employee>

@{
    ViewBag.Title = "All SuperVisors";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2 class="text-center">All Supervisors</h2>

<p>
    @Html.ActionLink("Add new Supervisor", "AddSuperVisor")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        
        <th class="to_be_hidden_firstly">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="to_be_hidden_secondly">
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authorized)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            Holiday
        </th>
        <th>
            Shift
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
            @Html.DisplayFor(modelItem => item.LastName)
        </td>

        <td class="to_be_hidden_firstly">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="to_be_hidden_secondly">
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authorized)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Day.DayName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shift.StartTime)
        </td>*@
        <td> 
            @Html.ActionLink("Details", "DetailsOfSuperVisor", new { id=item.ID }, new { @class = "styled_link" }) 
            @Html.ActionLink("Edit", "UpdateSuperVisor", new { id = item.ID }, new { @class = "styled_link" })
           
            @if (item.Authorized == 1)
            {

                using (Html.BeginForm("PanEmployee", "Admin", new { id = item.ID }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Pan" class="btn-link styled_link done-btn" />
                }

            }
            else
            {
                using (Html.BeginForm("unPanEmployee", "Admin", new { id = item.ID }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Authorize" class="btn-link styled_link" />
                }
            }
         </td>
    </tr>
}

</table>
