<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/SystemActors_Styles.css"/>
    @*<link rel="stylesheet" href="~/Content/HomeStyles.css"/>*@
    <link rel="icon" href="~/Content/Images/site-icon.png"/>
    <link rel="stylesheet" href="~/Content/mystyle.CSS">
</head>
<body>

    <style>
        body {
            background: #DDDDDD;
        }

        .content-container {
            background: white;
        }

        .navbar {
            position: relative;
            min-height: 50px;
            margin-bottom: 0;
            border: 1px solid transparent;
        }
        .navbar-default {
            border: none;
            background: #000000c2;
        }

            .navbar-default .navbar-nav > li:hover {
                background: #ffffffed;
                cursor: pointer;
                border-radius: 5px;
            }

                .navbar-default .navbar-nav > li:hover a {
                    color: black;
                }

        .last-dropdown .dropdown-content {
            display: none;
            position: absolute;
            background-color: #000000de;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            left: -67px !important;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #000000de;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            left: -67px !important;
        }

            .dropdown-content a {
                color: white !important;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                transition: all .4s ease;
            }

                .dropdown-content a:hover {
                    background-color: #ffffffed;
                    color: black !important;
                    font-weight: bold;
                }
    </style>
    <div class="frame" id="frame"></div>
    <!--*** Start navbar ***-->
    <nav class="navbar navbar-default container">

        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--*** Start brand ***-->
                @if (TempData["msg10"] != null)
                {
                    @Html.Raw(TempData["msg10"])
                    TempData["msg10"] = null;
                }
                @*@Html.ActionLink("smart delivery", "Index", "Home", new { @class = "navbar-brand uppercase" })*@
                <a href="@Url.Action("Index","Home")" title="Home"><img src="~/Content/Images/mylogo.png" /></a>
                <!--*** End brand ***-->
            </div>

            <div class="collapse navbar-collapse"
                 id="bs-example-navbar-collapse-1">                
                <ul class="nav navbar-nav navbar-right">
                    
                   

                     <li><a href="~/Admin/getTopRated">Top Rated Employees</a></li>
                    
                    <li><a href="~/Admin/ListAllCustomers">All Customers</a></li>
                    <li><a href="~/Admin/ListAllShifts">Shifts</a></li>
                    <li><a href="~/Admin/ListAllSuperVisor">SuperVisors</a></li>
                   
                    <li><a href="~/Admin/ListAllShipmentTypes">Shipment Types</a></li>
                    <li class="dropdown">
                        <a class="dropbtn">Delivery Men</a>
                        <div class="dropdown-content">
                            <a href="~/Admin/ListAllDeliveyMen">All Delivery Men</a>
                            <a href="~/Admin/ListAllWaitingDeliveyMenForApproval">Waiting Approvals</a>
                            <a href="~/Admin/ListAllComplaints">Complaints</a>
                        </div>
                    </li>
                    @if (Session["userName"] != null)
                    {
                        <li class="dropdown last-dropdown">
                            <a class="dropbtn">@Session["userName"].ToString()</a>
                            <div class="dropdown-content">
                                <a href="~/Admin/ViewProfile">My Profile</a>
                                <a href="~/Admin/UpdateProfile">Edit profile</a>
                                <a class="tip" href="@Url.Action("LogOut","home") ">
                                    Log out
                                </a>
                            </div>
                        </li>
                    }

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!--***End container***-->
    </nav>
    <!--*** End navbar ***-->

    <div class="done-notification">
        Done!
    </div>


    <!--*** index body ***-->
    <div class="container content-container">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
</body>
</html>
