                </form>
            </div>
        </div>
    </div>
    <!--*** End Contact ***-->
    <!--*** Start scripts ***-->
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    <!--*** End scripts ***-->
</body>
</html>
