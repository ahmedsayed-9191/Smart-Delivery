<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/Content/SystemActors_Styles.css"/>
    <link rel="stylesheet" href="~/Content/mystyle.CSS"/>

    <link rel="icon" href="~/Content/Images/site-icon.png"/>
    <link rel="stylesheet" href="~/Content/MessageNotifications.css" />

</head>
<body>
    <style>
        body {
            background: #DDDDDD;
        }

        .content-container {
            background: white;
        }

        .navbar {
            position: relative;
            min-height: 50px;
            margin-bottom: 0;
            border: 1px solid transparent;
        }
        .dropdown-content a {
            color: white !important;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: all .4s ease;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #5296CF;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
            right:0;
        }

            .dropdown-content a:hover {
                background-color: #ffffffd1;
                color: #5296cf !important;
                font-weight: bold;
            }

    </style>
    <div class="frame" id="frame"></div>
    <!--*** Start navbar ***-->
    <nav class="navbar navbar-default container">

        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--*** Start brand ***-->
                @if (TempData["msg10"] != null)
                {
                    @Html.Raw(TempData["msg10"])
                    TempData["msg10"] = null;
                }
                @*@Html.ActionLink("smart delivery", "Index", "Home", new { @class = "navbar-brand uppercase" })*@
                <a href="@Url.Action("Index","Home")" title="Home"><img src="~/Content/Images/mylogo.png" /></a>
                <!--*** End brand ***-->
            </div>

            <div class="collapse navbar-collapse"
                 id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li></li>

                    <li><a href="~/Shop/RequestCustomDelivery">Request Delivery</a></li>
                    <li class="dropdown">
                        <a class="dropbtn">Offers And Orders</a>
                        <div class="dropdown-content">
                            <a href="~/Shop/ListAllOffers">All Offers</a>
                            <a href="~/Shop/ListAllOrders">All Orders</a>
                            <a href="~/Shop/AddOffer">Add Offer</a>
                        </div>
                    </li>
                    <li><a href="~/Shop/ListDeliveryRequests">All Delivery Requests</a></li>
                    @if (Session["userName"] != null)
                    {
                        <li class="dropdown last-dropdown">
                            <a class="dropbtn">@Session["userName"].ToString()</a>
                            <div class="dropdown-content">
                                <a href="~/Shop/ViewProfile">My Profile</a>
                                @Html.ActionLink("LogOut", "LogOut", "home")
                            </div>
                        </li>
                    }
                    <!--  start of messages notification-->
                    <li class="chat-icon">
                        <div class="noti-icon" id="chatnotifications" data-ispoen="false">
                            <span class="notify-counter" id="notificationsCountValue"> </span>
                            <i class="fa fa-envelope fa-2x"></i>

                            <div class="notify-content" id="notificationsContent">
                                <div class="header-of-messages"><p>Recent Messages</p></div>
                            </div>
                        </div>
                    </li>
                    <!--  end of messages notification-->

                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!--***End container***-->
    </nav>
    <!--*** End navbar ***-->

    <div class="done-notification">
        Done!
    </div>

    <!--*** index body ***-->
    <div class="container content-container">
        @RenderBody()
    </div>



    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Scripts.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
